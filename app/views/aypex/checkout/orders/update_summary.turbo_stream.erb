<% response_message ||= nil %>

<%= turbo_stream.update "checkout-summary" do %>
  <%= render partial: 'aypex/checkout/shared/summary', locals: { order: @order } %>
<% end %>

<% if response_message %>
  <%= turbo_stream.prepend :toast do %>
    <%= render partial: 'aypex/checkout/shared/toast', locals: { message: response_message, kind: kind } %>
  <% end %>
<% end %>
