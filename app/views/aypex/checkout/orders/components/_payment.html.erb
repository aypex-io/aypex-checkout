<% content_for :attained_order_info do %>
  <%= render partial: 'aypex/checkout/shared/info'%>

  <div class="checkout-so-far px-3 mb-5 border rounded">
    <div class="text-muted p-2 fs-6">
      <%= I18n.t('aypex_checkout.bill_to') %>:
    </div>

    <div class="text-truncate p-2">
      <%= @order.billing_address.address1 %>,
      <%= @order.billing_address.city %>,
      <%= @order.billing_address.zipcode %>,
      <%= @order.billing_address.country %>
    </div>

    <div class="text-end p-2">
     <small><%= link_to I18n.t('aypex_checkout.change'), aypex.address_manager_checkout_addresses_path, data: {turbo_frame: :modal} %></small>
    </div>
  </div>
<% end %>

<% content_for :back_button do %>
  <% # i18n-tasks-use I18n.t('aypex_checkout.return_to_delivery') %>
  <%= link_to aypex.checkout_state_path(aypex_checkout_previous_step_name), class: 'btn btn-link' do %>
    <%= aypex_checkout_svg_tag('chevron-left.svg') %> <%= I18n.t("aypex_checkout.return_to_#{aypex_checkout_previous_step_name}") %>
  <% end %>
<% end %>

<% content_for :proceed_button do %>
  <% # i18n-tasks-use I18n.t('aypex_checkout.continue_to_confirm') %>
  <% # i18n-tasks-use I18n.t('aypex_checkout.continue_to_complete') %>
  <%= submit_tag I18n.t("aypex_checkout.continue_to_#{aypex_checkout_next_step_name}"), class: 'btn btn-primary w-100' %>
<% end %>
