<div id="<%= dom_id(card,'aypex') %>" class="payment-sources-list-item">
  <label class="form-check-label aypex-radio-label">
    <%= radio_button_tag "order[existing_card]", card.id, (card == @payment_sources.first), { class: "existing-cc-radio" } %>
    <span class="aypex-radio-label-custom-input"></span>
    <%= credit_card_icon(card.cc_type) %>
    <span>****<%= card.last_digits %>,&nbsp</span>
    <span><%= card.name %></span>
    <%= button_tag I18n.t("aypex.checkout.remove"), type: 'button', class: 'btn text-start d-block p-0 js-remove-credit-card', data: { id: card.id } %>
  </label>
</div>
